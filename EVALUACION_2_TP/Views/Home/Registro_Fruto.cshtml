
@{
    ViewBag.Title = "Registro_Fruto";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12 text-center">
            <p><a class="btn btn-primary btn-xl" href="/Frutos/Mostrar_Crear">Volver al Menu &raquo;</a></p>
        </div>
    </div>
</div>
<section class="page-section">
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 card shadow mb-4">
            <div class="card-header py-3 align-middle">
                <div class="row text-primary">
                    <img src="~/Content/img/frutos.svg" alt="Control" style="width:auto; height:25px; padding: 0px 6px " />
                    <h4 class="m-0 font-weight-bold text-primary">Ingreso Fruto</h4>
                </div>
            </div>
            <div class="card-body">
                <form>
                    <fieldset>
                        <table style="width:100%">
                            <tr align='center'>
                                <td align='center'>
                                    Identificador:
                                    <input type="text">
                                </td>

                                <td align='center'>
                                    <label for="name">Fruto:</label>
                                    <select name="fruto">
                                        <option value="Value1">Fresa</option>
                                        <option value="value2" selected>Arándano</option>
                                        <option value="Value1">Mora</option>
                                    </select>
                                </td>

                                <td align='center'>
                                    Designación:
                                    <input type="text">
                                </td>

                            </tr align='center'>
                            <tr>
                                <td align='center' colspan="3"><hr/></td>
                            </tr>
                            <tr align='center'>
                                <td align='left' colspan="3">
                                    <p><a class="btn btn-info btn-lg" onclick="alert('Fruto Registrado')" href="">Ingresar &raquo;</a></p>
                                </td>
                            </tr>

                        </table>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
</section>
